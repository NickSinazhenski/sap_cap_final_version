{
  "name": "cap_hope",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open app.purchase.purchaseapp.project1/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-project2": "cds watch --open app.purchase.approver.project2/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic",
        "users": {
          "requester": {
            "password": "1234",
            "roles": ["requester"]
          },
          "approver": {
            "password": "1234",
            "roles": ["approver"]
          },
          "admin": {
            "password": "1234",
            "roles": ["requester", "approver"]
          }
        }
      }
    }
  }
}

