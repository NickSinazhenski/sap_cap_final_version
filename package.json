{
  "name": "cap_hope",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },

  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open app.purchase.purchaseapp.project1/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-project2": "cds watch --open app.purchase.approver.project2/index.html?sap-ui-xx-viewCache=false --livereload false"
  },

  "private": true,

  "workspaces": [
    "app/*"
  ],

  "sapux": [
    "app/project1",
    "app/project2"
  ],

  "cds": {
    "security": {
      "roles": {
        "requester": {
          "description": "User who can create purchase requests"
        },
        "approver": {
          "description": "User who can approve purchase requests"
        }
      }
    }
  }
}